{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/section-nav.css') }}" />
{% endblock %}

{% if usersectionroles is defined and grades is defined and sections_taking is defined and sections_teaching is defined%}

{% set elevatedUser = is_granted("ROLE_SUPER") or is_granted("ROLE_ADMIN") %}

{# Left Nav For the Section List (On the homepage) #}
<nav class="nav-left">
	<div class="large-link">
		<a href="{{path('homepage')}}">Home</a>
	</div>

	{% if usersectionroles|length > 0 %}	
		{# list of all the sections being taken #}
		{% if sections_taking|length > 0 %}
			{% for section in sections_taking %}
				{# TODO: remove this #}
				<div class="testData" style="display: none" data-stuff="{{ section|json_encode }}"
				data-more="{{ section.course|json_encode }}"></div>

				<div class="section-nav-container">
					<div class="nav-section">
						<img class="nav-chevron" src="{{asset('images/white_expand_more.png')}}" />
						<a href="{{path('section', {'sectionId':section.id})}}">{{section.course.code}}</a>
					</div>
					{% for assignment in section.assignments %}
						<div class="nav-assignment"><a href="{{path('assignment', {'sectionId':assignment.section.id, 'assignmentId':assignment.id})}}">{{assignment.name}}</a></div>
					{% endfor %}				
				</div>
			{% endfor %}
		{% endif %}

		{# list of all the sections being taught #}
		{% if sections_teaching|length > 0 %}
			{% for section in sections_teaching %}
				{# TODO: remove this #}
				<div class="testData" style="display: none" data-stuff="{{ section|json_encode }}"></div>

				<div class="section-nav-container">
					<div class="nav-section">
						<img class="nav-chevron" src="{{asset('images/white_expand_more.png')}}" />
						<a href="{{path('section', {'sectionId':section.id})}}">{{section.course.code}}</a>
					</div>
					{% for assignment in section.assignments %}
						<div class="nav-assignment"><a href="{{path('assignment', {'sectionId':assignment.section.id, 'assignmentId':assignment.id})}}">{{assignment.name}}</a></div>
					{% endfor %}				
				</div>
			{% endfor %}
		{% endif %}
	{% endif %}

	<div class="large-link">
		<a href="{{path('homepage')}}">Past</a>
	</div>
</nav>

{% endif %}
