{% if usersectionroles is defined and grades is defined and sections_taking is defined and sections_teaching is defined%}

{# Left Nav For the Section List (On the homepage) #}
<nav class="nav-left">
	
	{% if is_granted("ROLE_ADMIN") or is_granted("ROLE_SUPER") %}
		<a href="{{path('section_edit')}}" class="btn">
			<div class="btn btn-center">+ Section</div>
		</a>
	{% endif %}
	
	{% if usersectionroles|length == 0 %}
		<ol>
			<li> You aren't part of any sections! </li>
		</ol>			
	
	{% else %}
		
		<ol style="padding-top: 0px">
			<li>
				<strong>Your Classes</strong>
			</li>
		</ol>
		{# list of all the sections being taken #}
		{% if sections_taking|length > 0 %}
		<ol style="padding-bottom: 10px">

			{% if sections_teaching|length > 0%}
				<li style="margin: 0px; padding-bottom: 5px"> TAKING: </li> 
			{% endif %}
			
			{% for section in sections_taking %}	
			
				<a href="{{path('section', {'sectionId':section.id})}}">
					<li class="sidebar" style="padding-left: 15px">
						<span class="preview">{{section.course.name}}
							<br/><small>
							{{section.name}}
							
							{% if grades[section.id]['percentage_adj'] > 0 %}
							
								<br/>{{(grades[section.id]['percentage_adj']*100)|number_format(1, '.') ~ '%'}}
								
							{% endif %}
							
							</small>
						</span>	
					
					{% if app.user in section_teachers or is_granted("ROLE_SUPER") %}
						<object>
							<a title="Edit Section" href="{{path('section_edit', {'sectionId': section.id})}}">
								<img class="small-icon" id="right-icon" src="{{ asset('edit.png') }}">
							</a>
							
						</object>
					{% endif %}	
					
					</li>
				</a>	
			{% endfor %}
		</ol>
		{% endif %}
		
		{# list of all the sections being taught #}
		{% if sections_teaching|length > 0 %}
		<ol style="padding-bottom: 10px">
			{% if sections_taking|length > 0%} <li style="margin: 0px; padding-bottom: 5px"> TEACHING: </li> {% endif %}
			{% for section in sections_teaching %}	
			
				<a href="{{path('section', {'sectionId':section.id})}}">
				
				<li class="sidebar" style="padding-left: 15px">
			
					<span class="preview">{{section.course.name}}						
						<br/><small>{{section.name}}</small>
					</span>	
					<object>
						<a title="Edit Section" href="{{path('section_edit', {'sectionId': section.id})}}">
							<img class="small-icon" id="right-icon" src="{{ asset('edit.png') }}">
						</a>
					</object>	
					
				</li>
					
				</a>	
			{% endfor %}
		</ol>
		{% endif %}
	{% endif %}
	
	<div class="btn btn-center" id="past_sections_button">&#9660; Load Past Sections </div>
	
	{# list of all the old sections #}
	<ol id="past_list" style="padding-bottom: 10px; display: none">
		
	</ol>
	
</nav>


{% endif %}