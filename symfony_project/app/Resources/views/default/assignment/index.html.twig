{% block head %}
<title>Gradel | Project {{project_id}}</title>
{% endblock %}
{% block body %}
<body>
    <nav class="problems">
        <ul>
          {% for problem in assignment.problems %}
            <li>
              <a href="{{path("assignment", {'userId': 1, 'sectionId': 1, 'assignmentId': 1, 'problemId': problem.id})}}">Jeff</a>
            </li>
          {% endfor %}
        </ul>
    </nav>
    <section id="problemSpec"> <!-- FIXME: This ID name doesn't make sense -->
        <!-- TODO: Change the contents of this using routing when you click on the link on the left -->
        <h1>{{currentProblem.name}}</h1>
        <p>{{currentProblemDescription}}</p>
        <textarea>Enter your code here.</textarea>      <!-- TODO: Add a syntax highlighting plugin-->
        <!-- <pre><code><textarea></textarea></code></pre> -->
        <button class="btn">Submit</button>
        <div id="file-upload-wrapper">
            <input type="file" name="files[]" multiple id="file-upload"> <!-- FIXME: To get hover effects these need to be in the other order, but that is making you not able to clock on the file input thing. -->
            <button class="btn">Upload Files</button>
        </div>
    </section>
Testing
</body>
{% endblock %}
{% block stylesheets %}
<style>
    html, body {
        padding: 0px;
        margin: 0px;
    }

    nav.problems {
        float: left;
        position: fixed;
        overflow-x: scroll;
        border-right: 1px solid grey;
        background-color: #8DC26F;
        color: white;
        height: 100vh;
        width: 200px;

        -webkit-box-shadow: 3px 3px 10px -4px rgba(0,0,0,0.64);
        -moz-box-shadow: 3px 3px 10px -4px rgba(0,0,0,0.64);
        box-shadow: 3px 3px 10px -4px rgba(0,0,0,0.64);
    }

    nav > ul {
        list-style: none;
        font-family: sans-serif;
        line-height: 25pt;
        font-size: 14pt;
        text-align: left;
        padding: 10px;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    nav > ul > li {
        border-bottom: 1px dotted grey;
        padding: 3px;
    }

    nav > ul > li:hover {
        background-color: #76b852;
    }

    #problemSpec {
        margin-left: 200px;
        width: calc(100% - 200px);
        padding: 10px;
    }

    textarea {
        width: calc(100% - 20px);
        height: 300px;
        border-radius: 10px;
        border: 1px solid #8DC26F;
        padding: 10px;
        font-family: monospace;
        font-size: 10pt;

        -webkit-box-shadow: inset 3px 3px 10px -4px rgba(0,0,0,0.64);
        -moz-box-shadow: inset 3px 3px 10px -4px rgba(0,0,0,0.64);
        box-shadow: inset 3px 3px 10px -4px rgba(0,0,0,0.64);
    }

    .btn {
        margin-top: 10px;
        width: 100px;
        height: 30px;
        background-color: #8DC26F;
        color: white;
        /* border-radius: 5px; */
        border: none;
    }

    .btn:hover {
        background-color: #76b852;
    }

    #file-upload {
        margin-top: 10px;
        position: absolute;
        opacity: 0;
        /* top: 0;
        right: 0; */
        width: 100px;
        height: 30px;
    }

    #file-upload-wrapper {
        display: inline-block;
    }

</style>
{% endblock %}
{% block scripts %}
<!-- JQuery -->
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}
