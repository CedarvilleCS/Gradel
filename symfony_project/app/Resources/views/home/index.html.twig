{% block head %}
<title>Gradel</title>
<link rel="icon" type="image/x-icon" href="{{ asset('logo1.png') }}" />
{% endblock %}


{% block body %}

<body>        
    <div class="topnav" id="myTopnav">
        <a href="{{path('homepage')}}">Home</a>
        <a href="">Admin</a>
        <a href="{{path('user_logout')}}">Logout</a>
    </div>

    {# Left Nav #}
    <nav class="nav-left">
        
		<a href="{{path('section_new', {'userId': user.id})}}" class="btn">
			<div class="btn btn-center">+ Section</div>
		</a>
        
		<ol style="padding-bottom: 10px">
			{% for usr in usersectionroles %}			
			
				<a href="{{path('section', {'userId':usr.user.id, 'sectionId':usr.section.id})}}"><li>{{usr.section.course.name}}<br><small>{{usr.section.name}}</small></li></a>			
			
			{% endfor %}
		</ol>
		
		<a href="" class="btn">
			<div class="btn btn-center">&#9660; Load Past Sections </div>
		</a>
    </nav>

    {# Main section #}
    <section id="main">
        {# Cards #}
        <div class="card">
            <div class="btn-close" onclick="collapseCard('courseInfo')"><h2 style="margin: 0px">Upcoming Assignments<span style="float: right">&#9660;</span></h2></div>
            <div id="courseInfo" class="card-contents">
                
                {% set oldDate = '' %}
                
                {% for asgn in assignments %}
                
                    {% set newDate = asgn.end_time|date('m/d/Y') %}
                    
                    {% if newDate != oldDate %}
                        <h4 style="background: grey; color: white; padding: 5px"> {{asgn.end_time|date('l, F d')}} </h4>
                    {% endif %}
                    
                    {% set oldDate = newDate %}
                    
                    <div style="margin-left: 20px">
                        <small>{{asgn.section.name}}</small>
                        <a href="{{path('assignment', {'userId':user.id, 'sectionId':asgn.section.id, 'assignmentId':asgn.id})}}">
                            {{asgn.name}}
                        </a>								
                    </div>
                
                
                
                {% endfor %}
            </div>
        </div>

        <div class="card">
            <div class="btn-close" onclick="collapseCard('gradeReport')"><h2 style="margin: 0px">Grade Report<span style="float: right">&#9660;</span></h2></div>
            <div id="gradeReport" class="card-contents">
                <div>
                    You are doing well in your classes!
                    <ul>
                    {% for asgn in assignments %}
                    
                        {#% if usr.role.name != "Teaches" %#}
                            
                            {{asgn.name}} - {{(grades[asgn.id]*100)|number_format(1, '.')}}% <br/> 
                            
                        {#% endif %#}
                    
                    {% endfor %}
                    <ul/>
                </div>
            </div>
        </div>
        

        <div class="card">
            <div class="btn-close" onclick="collapseCard('studentInfo')"><h2 style="margin: 0px">Student Information<span style="float: right">&#9660;</span></h2></div>
            <div id="studentInfo" class="card-contents">
                <div>
                    Your name is <span style="color:green">{{user.getFirstName()}} {{user.getLastName()}}</span> <br/>
                    Your email address is <span style="color:green">{{user.getEmail()}}</span>
                </div>
            </div>
        </div>
    </section>


</body>

{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('home.css') }}" />
    <link rel="stylesheet" href="{{ asset('jquery.scrollbar.css') }}" />
{% endblock %}


{% block scripts %}
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="{{ asset('js/cards.js') }}"></script>
{% endblock %}