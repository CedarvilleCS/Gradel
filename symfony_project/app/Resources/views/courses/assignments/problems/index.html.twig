{% block head %}
<title>Gradel | Project {{project_id}}</title>
{% endblock %}

{% block body %}

<body>

    <div class="topnav" id="myTopnav">
        <a href="../../../../courses">Home</a>
        <a href="../../../..">Account</a>
    </div>

    <nav class="problems">
        <ul>
          {% for problem in assignment.problems %}
            <li>
              <a href="{{path("assignment", {'userId': 1, 'sectionId': 1, 'assignmentId': 1, 'problemId': problem.id})}}">{{ problem.name }}</a>
            </li>
          {% endfor %}
        </ul>
    </nav>

    <section id="problemSpec"> <!-- FIXME: This ID name doesn't make sense -->
        <!-- TODO: Change the contents of this using routing when you click on the link on the left -->
        <h1>{{currentProblem.name}}</h1>
        <p>{{currentProblemDescription}}</p>
        <div id="editor">function foo(items) {
            var x = "All this is syntax highlighted";
            return x;
        }</div>

        <script src="{{ asset('src-noconflict/ace.js') }}" type="text/javascript" charset="utf-8"></script>
        <script>
            var editor = ace.edit("editor");
            editor.setTheme("ace/theme/xcode");
            editor.getSession().setMode("ace/mode/javascript");
        </script>

        <!-- <form> -->
            {# <textarea id="codeInput">Enter your code here.</textarea>    <!-- TODO: Add a syntax highlighting plugin--> #}

            <!-- <pre><code><textarea></textarea></code></pre> -->

            {# <button class="btn">Submit</button> #}
        <!-- </form> -->


        {# <div id="file-upload-wrapper">
            <input type="file" name="files[]" multiple id="file-upload"> <!-- FIXME: To get hover effects these need to be in the other order, but that is making you not able to clock on the file input thing. -->
            <button class="btn">Upload Files</button>
        </div> #}


        <form action="{{path('upload', {'project_id': project_id, 'problem_id': problem_id}) }}" method="post" enctype="multipart/form-data">
            Select file to upload:
            <input type="file" name="fileToUpload" id="fileToUpload">
            <input type="submit" value="Upload File" name="submit">
        </form>

        <p>{{upload_message}}</p>

    </section>

</body>

{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('submit.css') }}" />
{% endblock %}

{% block scripts %}
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}
